{% extends 'blog_base.html.twig' %}

{% block title %} Администрирование - Просто Блог {% endblock %}

{% block content %}
    <div class='formentry'>
        <p class='formname'>Администрирование</p>
        <div class='formleft'>
            <ul style='list-style-type: disc; color: gray;'>
                <li><a class='link' title='Перейти' href='{{ path('user_register') }}'>
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        Создать администратора, модератора
                    {% else %}
                        Создать модератора
                    {% endif %}
                </a></li>

                <li><a class='link' title='Перейти' href='{{ path('post_show_all') }}'>К управлению постами</a></li>
                <li><a class='link' title='Перейти' href='{{ path('admin_show_comments') }}'>К управлению комментариями</a></li>

                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <li><a class='link' title='Перейти' href='{{ path('admin_show_users') }}'>К управлению пользователями</a></li>
                    <li><a class='link' title='Перейти' href='{{ path('admin_show_stab') }}'>К стабу базы данных</a></li>
                {% endif %}

            </ul>
        </div>
        {{ include('_blog_flashes.html.twig') }}
    </div>
{% endblock %}