{% extends 'blog_base.html.twig' %}
{% set session_user_id = false %}
{% set is_superuser = false %}

{% block title %} Вход - Просто Блог {% endblock %}

{% block content %}
<div class='formentry'>
    <p class='formname'>Вход</p>

    {{ form_start(form) }}
        {{ form_row(form._username, {
            label: 'Введите е-mail:'
        }) }}
        {{ form_row(form._password, {
            label: 'Введите пароль:'
        }) }}
        <img class='captcha' src="{{ asset('images/captcha.php') }}"><br>
        {{ form_row(form.captcha, {
            label: 'Введите код с картинки:'
        }) }}

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {% if error %}
            <div class='formmsg'>
                <p class='error'>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
            </div>
        {% endif %}

        <div id='left'><a class='formbutton' href='{{ path('user_register') }}'>Создать аккаунт</a></div>
        <div id='right'><button type='submit' class='formsubmit'>Войти</button></div>

    {{ form_end(form) }}
</div>
{% endblock %}