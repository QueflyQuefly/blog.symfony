{% extends 'blog_base.html.twig' %}

{% block title %}Модерация постов - Просто Блог {% endblock %}

{% block content %}
    {{ include('_blog_flashes.html.twig') }}

    <h1>Модерация постов</h1>

    {{ include('_blog_pagination.html.twig') }}

    {% if posts %}
        {% set class = 'generalpost' %}
        {% for post in posts %}
            {{ include('moderator/_post.html.twig') }}
            {% set class = 'viewpost' %}
        {% endfor %}
    {% else %}
        <p class='center'>Все посты прошли проверку</p>
    {% endif %}
{% endblock %}